<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="30dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="100dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           android:orientation="vertical"
           >
           <ImageView
               android:layout_width="250dp"
               android:layout_height="150dp"
               android:src="@drawable/egyption_food"
               android:scaleType="fitXY"
               android:id="@+id/meal_img"/>
           <TextView
               android:maxLines="15"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:textColor="@color/basic_txt_color"
               android:text="meal name"
               android:id="@+id/meal_name"
               android:gravity="center"
               android:layout_margin="5dp"/>
           <androidx.appcompat.widget.AppCompatRatingBar
               android:layout_width="wrap_content"
               android:progressTint="@color/rateColor"
               android:id="@+id/meal_rating"
               android:layout_gravity="center"
               android:layout_height="wrap_content"
               style="@style/Widget.AppCompat.RatingBar.Small"
               android:rating="3"/>
           <TextView
               android:layout_width="match_parent"
               android:id="@+id/meal_details"
               android:layout_height="wrap_content"
               android:textSize="12dp"
               android:text="Koshery is the national dish of Egypt!  It is an extremely popular dish that is made up of layers of noodles, rice, lentils, chickpeas, fried onions, red tomato sauce, and garlic sauce"
               android:maxLines="2"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_marginHorizontal="70dp"
               android:textColor="@color/details_txt_color"/>
           <com.airbnb.lottie.LottieAnimationView
               android:id="@+id/lotti_anim_content"
               android:layout_width="70dp"
               android:layout_height="60dp"
               android:layout_marginBottom="10dp"
               android:layout_gravity="center"
               app:lottie_rawRes="@raw/favorite_heart"
               app:lottie_speed="1"
               app:lottie_colorFilter="@color/basic_txt_color"
               app:lottie_autoPlay="false"/>

       </LinearLayout>

    </androidx.cardview.widget.CardView>
    

</LinearLayout>